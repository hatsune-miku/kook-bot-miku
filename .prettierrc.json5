{
  printWidth: 120,
  tabWidth: 2,
  useTabs: false,
  singleQuote: true,
  semi: false,
  trailingComma: 'es5',
  bracketSpacing: true,
  jsxBracketSameLine: false,
  arrowParens: 'always',
  endOfLine: 'auto',
  plugins: ['@trivago/prettier-plugin-sort-imports'],
  importOrder: [
    '^react(-.*)?$',
    '^[a-zA-Z]',
    '^@',
    '^@[a-zA-Z]',
    '^\\.\\/(?!.*\\.(less|css|sass|scss)$).*',
    '^\\.\\.\\/(?!.*\\.(less|css|sass|scss)$).*',
    '\\.(less|css|sass|scss)$',
  ],
  importOrderSeparation: true,
  importOrderSortSpecifiers: true,
  importOrderParserPlugins: ['typescript', 'jsx', 'decorators-legacy'],
  overrides: [
    {
      files: '*.{ts,tsx}',
      options: {
        parser: 'typescript',
      },
    },
  ],
}
